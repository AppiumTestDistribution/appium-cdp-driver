{
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "**/*.d.ts", "build"],
  "compilerOptions": {
    "outDir": "build",
    "strict": true,
    "inlineSourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2016",
    "declaration": false,
    "noResolve": false,
    "isolatedModules": false
  }
}
